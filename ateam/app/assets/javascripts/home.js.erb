

function align_home_player_dropdown(){
	$("#user-dropdown-content").css("top", $("#header-outer").outerHeight() -20)
  	$("#user-dropdown-content").css("left", $(".player-dropdown").offset().left + $(".player-dropdown").outerWidth() - $("#user-dropdown-content").outerWidth())
}


function show_user_dropdown(){
	$("#user-dropdown-content").show()
	$('body').on("mousedown", function(e){
		if(!$(e.target).hasClass("dropdown-action") && !$(e.target).hasClass("toolbar-dropdown-button") && !$(e.target).parents(".dropdown-action").length > 0 && !$(e.target).parents(".toolbar-no-close").length > 0){
			$("#user-dropdown-content").hide()
		}
	})
}

